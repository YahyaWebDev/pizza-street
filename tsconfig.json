{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/ProductCard.jsx", "app/pizzaCategory/page.jsx", "app/juicesCategory/page.jsx", "app/drinksCategory/page.jsx", "app/sandwichCategory/page.jsx", "app/page.jsx", "app/layout.tsx", "app/navbar.jsx", "app/sign-in/[[...sign-in]]/page.jsx"],
  "exclude": ["node_modules"]
}
